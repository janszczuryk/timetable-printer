<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Podział godzin: {{ teacher }}</title>
    <style>
        @font-face {
            font-family: 'Roboto Mono';
            src: url('app/template/font/RobotoMono-VariableFont_wght.ttf');
        }

        @page {
            size: a4 landscape;
            margin: .5cm 1cm;
        }

        html {
            box-sizing: border-box;
            font-size: 16px;
            font-family: 'Roboto Mono', STSong-Light, serif;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        body, h1, h2, h3, h4, h5, h6, p, ol, ul {
            margin: 0;
            padding: 0;
            font-weight: normal;
        }

        ol, ul {
            list-style: none;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        .text-center {
            text-align: center;
        }

        .headline {
            margin: 12px 6px;
            font-size: 20px;
        }

        table.timetable th.time {
            width: 14%;
        }

        table.timetable {
            border: 1px solid #000000;
        }

        table.timetable td {
            padding: 0 2px;
            text-align: center;
        }

    </style>
</head>
<body>
<h1 class="text-center">Podział godzin</h1>
<p class="text-center">Prowadzący: {{ teacher }}</p>

<p class="headline">Tydzień A (7:00&ndash;13:00):</p>
<table class="timetable">
    <thead>
    <tr>
        <th class="time">Godzina</th>
        <th>Poniedziałek</th>
        <th>Wtorek</th>
        <th>Środa</th>
        <th>Czwartek</th>
        <th>Piątek</th>
    </tr>
    </thead>
    <tbody>
        {% for row in rows %}
            <tr>
                <td>{{ row.hour.from }} &ndash; {{ row.hour.to }}</td>
                {% for lesson in row.week_a %}
                    <td>
                        {% if lesson.lesson_id == None %}
                            <p>{{ lesson.group_name }}</p>
                            <p>{{ lesson.lesson_name }}</p>
                            <p>{{ lesson.lesson_type }}</p>
                        {% else %}
                            <p>{{ lesson.lesson_name }}</p>
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
</table>

